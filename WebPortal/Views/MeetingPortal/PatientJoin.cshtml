@{
    ViewBag.Title = "Meeting";
}

@section styles {
    @Styles.Render("~/Content/skypestyle.css")
    @Styles.Render("~/Content/multivideo.css")
}

@section scripts {
    <script type="text/javascript" src="https://swx.cdn.skype.com/shared/v/1.2.15/SkypeBootstrap.min.js"></script>
    @Scripts.Render("~/Scripts/skype.js")
    <script src="~/Scripts/multivideo.js"></script>
    <script src="~/Scripts/meeting.js"></script>
}

