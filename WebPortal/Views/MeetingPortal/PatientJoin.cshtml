                    <img src="~/Content/Images/conference-arrow.png" style="padding-right:100px;" />
                    <img src="~/Content/Images/logo-company.png" style="padding-right:100px;" />
                </div>
            </div>
        </div>
        <div id="allVideoControls" style="padding-top:40px;display:none;" class="container body-content">
            <h2>Conference</h2>
            <div style="display:table;width:100%;table-layout:fixed;">
                <div style="display:table-row;">
                    <div style="display:table-cell;">
                        <div style="display:table;width:100%;table-layout:fixed;">
                            <div style="display:table-row;">
                                <div id="divCallControl" style="display:table-cell;width:80%;position:relative;">
                                    <div id="callControlsWrapper" style="height:514px;">
                                        <div id="videoControl" style="height: 100%;background: gray no-repeat; background-size: cover;">
                                            <div id="loading-content" class="loading-content">
                                                <div id="loadingText" class="loading-text"></div>
                                            </div>
                                            <div id="videoWindow" style="width:100%;height: 100%; background:gray; position: absolute; display: none;">
                                                <div class="mv-video" id="video0" style="height: 100%;">
                                                    <div id="video0Name" class="videoName"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="callControls" class="block height-fill no-pad callControls" style="background: #333333;margin-top: -1px;height: 50px;position: absolute; bottom: -50px; width: 100%;">
                                            <div id="callButtons" class="block flex-container" style="text-align:center; padding-top: 5px;">
                                                <a id="btn-start-video" class="iconfont videoOn" title="Start Video"></a>
                                                <a id="btn-stop-video" class="iconfont videoOff" title="Stop Video" style="display: none;"></a>
                                                <a id="btn-mute" class="iconfont mic-on" title="Mute"></a>
                                                <a id="btn-unmute" class="iconfont mic-off" title="Unmute" style="display: none;"></a>
                                                <a id="hang-up" class="iconfont hang-up" title="Hang up"></a>
                                                <a id="btnMaxScreen" class="iconfont fullscreenOn" title="Maximize screen"></a>
                                                <a id="btnMinScreen" class="iconfont fullscreenOff" title="Minimize screen" style="display:none;"></a>
                                                <img id="btnShowDevices" title="Set Devices" style="" src="~/Content/Images/set-devices.png" />
                                                <a id="btnChatService" class="iconfont chat" title="Start Chat" style=""></a>


